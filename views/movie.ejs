<%- include('partials/header'); -%>
<div class="container">
    <div class="movie-container">
      <div class="col-lg-6">
        <img src="<%=movieInfo.poster %>" alt="<%= movieInfo.movieName %> poster">
      </div>
      <div class="col-lg-6">
        <h1><%= movieInfo.movieName %></h1>
        <h4><%=movieInfo.plot %></h4>
        <hr>
        <h4> Year - <%= movieInfo.year %></h4>
        <hr>
        <h4> Genre - <%= movieInfo.genre %></h4>
        <hr>
        <div class="score-div">
          <div class="score-area">
            <img src="images/meta.png" alt="meta" style="margin-top: 24%; padding-bottom: 13%;">
            <h4><%= movieInfo.metascore %> / 100</h4>
          </div>
          <div class="score-area">
            <img src="images/imdb.png" alt="imdb">
            <h4><%= movieInfo.imdb %> / 10</h4>
          </div>
        </div>
      </div>
    </div>
</div>
